# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index()
GET        /anuncios            controllers.Application.anuncios()
POST       /anuncios            controllers.Application.novoAnuncio()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.versioned(path="/public", file)
GET        /assets/*file        controllers.Assets.at(path="/public", file)

POST    /horario               		controllers.SistemaCoordenadorController.sistemaCoordenador()

# Contato
GET     /contato                    controllers.Application.contato()

# Hor√°rio
GET		/newdisciplina				controllers.Application.newdisciplina()
GET		/listDisciplinas			controllers.Application.listDisciplinas()
